<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="0dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/item_my_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/Abuabu"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_keramik"
            android:layout_marginTop="13dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:src="@color/putih" />

        <LinearLayout
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/monserratreguler"
                android:text="Status Order"
                android:textColor="@color/putih"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/monserratreguler"
                android:text="Menunggu Barang Dikirim"
                android:textColor="@color/Hijau"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/monserratreguler"
                android:text="Nama"
                android:textColor="@color/putih"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_item_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/monserratreguler"
                android:text="SUGAR BROWN"
                android:textColor="@color/Hijau"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/monserratreguler"
                android:text="Jumlah"
                android:textColor="@color/putih"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_item_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/monserratreguler"
                android:text="44"
                android:textColor="@color/Hijau"
                android:textSize="13sp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Order:"
                android:textColor="@color/putih"/>
            <TextView
                android:id="@+id/txt_item_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 Januari 2019"
                android:textColor="@color/Hijau"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/putih"
                    android:text="Total Pembayaran"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="4dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/monserratmedium"
                    android:text="Rp.  "
                    android:textColor="@color/Hijau"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txt_item_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="12dp"
                    android:text="20500000"
                    android:fontFamily="@font/monserratmedium"
                    android:textColor="@color/Hijau"
                    android:textSize="13sp" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>